              "type": "object",
              "required": [
                "tx_hash",
                "output_index",
                "height",
                "satoshis"
              ],
              "properties": {
                "height": {
                  "type": "integer",
                  "format": "int64",
                  "minimum": 0
                },
                "output_index": {
                  "type": "integer",
                  "format": "int32",
                  "minimum": 0
